<div class="container">
    <div class="jumbotron jumbotron-fluid">
        <div class="container">
            <h1 class="display-4">Cheeseburger Cheeseburger</h1>
            <p class="lead">What kind of burger do you feel like consuming today?</p>
        </div>
    </div>
</div>


<div class="container">
    <div class="row">
        <div class="col-6">
            <div class="jumbotron to-eat">
                <h1>Burger Menu</h1>
                <hr>
                <ul>
                    {{#each burgers}}
                        {{#unless devoured}}
                        <li>
                            {{burger_name}}
                            <button class="btn btn-primary btn-sm notDevoured" data-id="{{id}}">Eat the Burger</button>
                        </li>
                        {{/unless}}
                    {{/each}}    
                </ul>
            </div>
        </div>
        <div class="col-6">
            <div class="jumbotron">
                <h1>Devoured Burgers</h1>
                <hr>
                <ul>
                    {{#each burgers}}
                        {{#if devoured}}
                        <li>
                            {{burger_name}}
                        </li>
                        {{/if}}
                    {{/each}}    
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col 12">
            <div class="jumbotron to-add">
                <h1>What Kind of Burger Would You Like To Devour Today?</h1>
                <form>
                    <div class="form-group">
                        <label for="newBurgers">Burger</label>
                        <input type="text" class="form-control" id="newBurgers"  placeholder="Enter Burger">
                        <button type="submit" class="addBurgers btn btn-primary btn-sm">Burger Time!!!</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

